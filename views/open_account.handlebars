<div class="vertical-div">
    <div class="vertical-div" id="open-account-content">
        <div class="vertical-div">
            <h1>Choose your balance.</h1>
        </div>
        <div>
            {{#if errorMessage}}
            {{errorMessage}}
            {{/if}}
        </div>

        <form action="/open_account" method="POST" id="make-account-form">
            <input type="text" name="first" maxlength="20" placeholder="First Name" />
            <input type="text" name="last" maxlength="20" placeholder="Last Name" />
            <input type="number" name="balance" maxlength="11" placeholder="Opening Balance" />
            <input type="text" name="address" maxlength="50" placeholder="Address" />
            <input type="password" name="password" maxlength="20" placeholder="Password"/>
            <input type="submit" value="Open Account" />
        </form>
    </div>
</div>